<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="10.0" 
    xmlns="http://javafx.com/javafx/18" 
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="ifpr.pgua.eic.projetointegrador.controllers.TelaLivros">
   <children>
      <Pane prefHeight="46.0" prefWidth="780.0">
         <children>
            <Label alignment="CENTER" layoutX="1.0" layoutY="4.0" prefHeight="16.0" prefWidth="780.0" text="Livros" />
         </children>
      </Pane>
      <GridPane alignment="CENTER_RIGHT" hgap="5.0" prefHeight="155.0" prefWidth="800.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="391.0" minWidth="10.0" prefWidth="80.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="732.0" minWidth="10.0" prefWidth="293.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="732.0" minWidth="10.0" prefWidth="82.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="732.0" minWidth="10.0" prefWidth="357.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="61.0" minHeight="10.0" prefHeight="47.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="113.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="135.0" minHeight="10.0" prefHeight="52.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="74.0" text="Titulo:" />
            <TextField fx:id="tfTitulo" promptText="Digite o título do livro" GridPane.columnIndex="1" />
            <Label alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="92.0" text="Editora:" GridPane.columnIndex="2" />
            <TextField fx:id="tfEditora" promptText="Digite a editora" GridPane.columnIndex="3" />
            <Label alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="77.0" text="Ano de Publicação:" GridPane.rowIndex="1" />
            <TextField fx:id="tfAnoPublicacao" promptText="Digite o ano de publicação" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="tfPaginas" promptText="Digite o número de páginas" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            <Label alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="91.0" text="Páginas:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
               <children>
                  <Button fx:id="btCadastrar" onAction="#cadastrar" text="Cadastrar" />
                  <Button onAction="#limpar" text="Limpar" />
               </children>
            </HBox>
         </children>
      </GridPane>
      <TableView fx:id="tbLivros" prefHeight="424.0" prefWidth="800.0">
        <columns>
          <TableColumn fx:id="tbcTitulo" prefWidth="278.0" text="Título" />
            <TableColumn fx:id="tbcEditora" prefWidth="137.0" text="Editora" />
            <TableColumn fx:id="tbcAnoPublicacao" prefWidth="146.0" text="Ano" />
            <TableColumn fx:id="tbcPaginas" prefWidth="143.0" text="Pág." />
        </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
